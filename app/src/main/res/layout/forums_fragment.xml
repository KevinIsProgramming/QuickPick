<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".profile.ProfileFragment">

    <ImageView
        android:id="@+id/forums_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/qp_logo"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/forums_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forums"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_below="@id/forums_logo"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.CardView
        android:id="@+id/forums_general"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_below="@id/forums_name">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General"
                    android:textSize="20sp"
                    />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/forums_offtopic"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_below="@id/forums_general">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off Topic"
                android:textSize="20sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/forums_bugs"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_below="@id/forums_offtopic">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bug Reporting"
                android:textSize="20sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>